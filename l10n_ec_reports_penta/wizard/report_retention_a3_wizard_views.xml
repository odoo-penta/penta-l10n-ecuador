<odoo>

    <record id="view_report_retentions_a3_wizard_form" model="ir.ui.view">
        <field name="name">report.retentions.a3.wizard.form</field>
        <field name="model">report.retentions.a3.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte Compras (A2)">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="retention_type"/>
                </group>
                <group string="Filtro por porcentaje">
                    <group>
                        <field name="apply_percentage_filter" nolabel="1" class="oe_inline"/>
                        <label for="apply_percentage_filter" class="oe_inline" string="Aplicar filtro de porcentaje"/>
                        <newline/>
                        <field name="use_percentage_range" nolabel="1" class="oe_inline"/>
                        <label for="use_percentage_range" class="oe_inline" string="Usar rango de porcentaje"/> 
                    </group>
					<!-- Modo EXACTO: visible si aplicar filtro estÃ¡ activo y NO se usa rango -->
					<group invisible="(not apply_percentage_filter) or use_percentage_range">
						<field name="percentage_operator"/>
						<field name="percentage_value"/>
					</group>
					<!-- Modo RANGO: visible si se usa rango -->
					<group invisible="not use_percentage_range">
						<field name="percentage_min"/>
						<field name="percentage_max"/>
					</group>
                </group>
                <footer>
                    <button name="print_report" type="object" string="Imprimir" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_retentions_a3_wizard" model="ir.actions.act_window">
        <field name="name">Reporte Retenciones (A3)</field>
        <field name="res_model">report.retentions.a3.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
