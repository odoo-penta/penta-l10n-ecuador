<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista del wizard de Cartera (solo formato Reporte / no EBI) -->
        <record id="view_pentalab_report_cartera_reporte_wizard_form"
                model="ir.ui.view">
            <field name="name">pentalab.report.cartera.reporte.wizard.form</field>
            <field name="model">pentalab.report.cartera.reporte.wizard</field>
            <field name="arch" type="xml">
                <form string="Reporte de Cartera">
                    <group>
                        <field name="date_end"
                               required="1"
                               default="context_today"/>
                    </group>
                    <footer>
                        <button name="action_generate_cartera_reporte"
                                string="Generar reporte"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancelar"
                                special="cancel"
                                class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para abrir el wizard (opcional, por si la usas en un menú o botón) -->
        <record id="action_pentalab_report_cartera_reporte_wizard"
                model="ir.actions.act_window">
            <field name="name">Reporte de Cartera</field>
            <field name="res_model">pentalab.report.cartera.reporte.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pentalab_report_cartera_reporte_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
