<odoo>
    <!-- Your existing tree view remains unchanged -->
    <record id="view_stock_by_location_list" model="ir.ui.view">
        <field name="name">stock.quant.stock.by.location.tree</field>
        <field name="model">stock.quant</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Stock por bodega">
                <field name="warehouse_id" string="Nombre almacén"/>
                <field name="store_location" string="Nombre de bodega"/>
                <field name="cat_l1_name" string="Categoría material"/>
                <field name="cat_l2_name" string="Tipo"/>
                <field name="cat_l3_name" string="Familia"/>
                <field name="cat_l4_name" string="Formato"/>
                <field name="cat_l5_name" string="Especificación"/>
                <field name="cat_l6_name" string="Procedencia"/>
                <field name="packaging_name" string="Metraje caja"/>
                <field name="default_code" string="Código"/>
                <field name="product_name" string="Descripción"/>
                <field name="product_attribute_value_ids" widget="many2many_tags" string="Atributos"/>
                <field name="quantity" string="Cantidad"/>
            </list>
        </field>
    </record>

    <!-- Modified search view to add filter in left panel -->
    <record id="view_stock_quant_search_inherit_attributes" model="ir.ui.view">
        <field name="name">stock.quant.search.inherit.attributes</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <search position="inside">
                <searchpanel>
                    <field name="product_attribute_value_ids" icon="fa-filter" string="Atributos" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>
</odoo>
