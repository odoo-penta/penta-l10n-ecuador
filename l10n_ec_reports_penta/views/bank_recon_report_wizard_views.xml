<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Vista del Wizard -->
  <record id="view_penta_bank_recon_report_wizard_form" model="ir.ui.view">
    <field name="name">penta.bank.recon.report.wizard.form</field>
    <field name="model">penta.bank.recon.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Reporte de Conciliación Bancaria">
        <group>
          <group>
            <field name="date_from" required="1"/>
            <field name="date_to" required="1"/>
          </group>
          <group>
            <field name="journal_id" options="{'no_create': True}" required="1" domain="[('type','=','bank')]"/>
            <field name="user_id" readonly="1"/>
            <field name="account_number" readonly="1"/>
          </group>
        </group>
        <separator string="Columnas incluidas (sin resumen por ahora)"/>
        <p class="o_form_label">
          Fecha, Tipo de Movimiento, Número de Documento, Referencia Contable, Debe, Haber, Saldo, Estado de Conciliación, Memo
        </p>
        <!--
        <label string="Fecha, Tipo de Movimiento, Número de Documento, Referencia Contable, Debe, Haber, Saldo, Estado de Conciliación, Memo" class="o_form_label"/>
        -->
        <footer>
          <button name="action_export_xlsx" type="object" string="Exportar a Excel" class="btn-primary"/>
          <button name="action_print_pdf" type="object" string="Imprimir PDF" class="btn-secondary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Acción para abrir el wizard -->
  <record id="action_penta_bank_recon_report_wizard" model="ir.actions.act_window">
    <field name="name">Reporte de Conciliación Bancaria</field>
    <field name="res_model">penta.bank.recon.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
