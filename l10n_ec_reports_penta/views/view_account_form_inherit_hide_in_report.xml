<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_form_inherit_hide_in_report" model="ir.ui.view">
        <field name="name">account.account.form.inherit.hide_in_report</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group>
                    <field name="hide_in_report" string="Ocultar en reporte"/>
                </group>
            </xpath>
        </field>
    </record>


     <record id="view_account_group_form_inherit_hide_in_report" model="ir.ui.view">
        <field name="name">account.group.form.inherit.hide_in_report</field>
        <field name="model">account.group</field>
        <field name="inherit_id" ref="account.view_account_group_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <group>
                    <field name="account_move" string="Cuenta de movimiento"/>
                </group>
            </xpath>
        </field>
    </record>
    
</odoo>
