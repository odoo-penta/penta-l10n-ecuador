<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Menús -->
  <!-- Contabilidad -> Reportes -->
  <menuitem id="menu_pentalab_reports_root"
            name="Reportes"
            parent="account.menu_finance"
            sequence="60"/>
  <!-- Reportes -> Reportes Pentalab -->
  <menuitem id="menu_pentalab_reports_group"
            name="Reportes Pentalab"
            parent="menu_pentalab_reports_root"
            sequence="61"/>

  <!-- Acción (wizard) -->
  <record id="action_pentalab_anexo_compras_wizard" model="ir.actions.act_window">
    <field name="name">Detalle de compras</field>
    <field name="res_model">pentalab.invoice.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>



  <!-- Vista LIST del reporte -->
  <record id="view_pentalab_invoice_report_line_list" model="ir.ui.view">
    <field name="name">pentalab.invoice.report.line.list</field>
    <field name="model">pentalab.invoice.report.line</field>
    <field name="arch" type="xml">
      <list string="Detalle de Compras" create="false" edit="false" delete="false">
        <field name="company_id"/>
        <field name="invoice_date"/>
        <field name="date"/>
        <field name="move_name"/>
        <field name="journal_id"/>
        <field name="doc_type_name"/>
        <field name="ref"/>
        <field name="importacion"/>
        <field name="purchase_order_name"/>
        <field name="auth_number"/>
        <field name="partner_vat"/>
        <field name="partner_id"/>
        <field name="partner_category"/>
        <field name="payterm_name"/>
        <field name="paymethod_name"/>
        <field name="default_code"/>
        <field name="product_name"/>
        <field name="parent_categ_name"/>
        <field name="categ_name"/>
        <field name="quantity" sum="Cantidad"/>
        <field name="price_unit"/>
        <field name="taxes"/>
        <field name="price_subtotal" sum="Subtotal"/>
        <field name="price_total" sum="Total"/>
        <field name="currency_id"/>
      </list>
    </field>
  </record>

  <!-- Wizard form -->
  <record id="view_pentalab_invoice_report_wizard_form" model="ir.ui.view">
    <field name="name">pentalab.invoice.report.wizard.form</field>
    <field name="model">pentalab.invoice.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Parámetros - Detalle de compras">
        <group>
          <group>
            <field name="date_from"/>
            <field name="date_to"/>
          </group>
          <group>
            <field name="journal_ids" widget="many2many_tags"/>
          </group>
        </group>
        <footer>
          <button string="Ver" name="action_show" type="object" class="btn-primary"/>
          <button string="Cerrar" special="cancel" class="btn-link"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
