<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pentalab_report_balance_wizard" model="ir.ui.view">
        <field name="name">pentalab.report.balance.wizard.form</field>
        <field name="model">pentalab.report.balance.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Balance General">
                <group>
                    <field name="date_to" required="1"/>
                </group>
                <footer>
                    <button name="action_generate_report" type="object" string="Confirmar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
                <separator string="Reporte Generado"/>
                <group invisible="report_file == False">
                    <field name="report_filename" readonly="1" invisible="1"/>
                    <field name="report_file" filename="report_filename"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_pentalab_report_balance_wizard" model="ir.actions.act_window">
        <field name="name">Generar Reporte Modificado</field>
        <field name="res_model">pentalab.report.balance.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
