<odoo>
    <record id="view_export_inventory_wizard_form" model="ir.ui.view">
        <field name="name">export.inventory.month.wizard.form</field>
        <field name="model">export.inventory.month.wizard</field>
        <field name="arch" type="xml">
            <form string="Seleccionar mes y aÃ±o">
                <group>
                    <field name="month"/>
                    <field name="year"/>
                </group>
                <footer>
                    <button name="export_xlsx" type="object" string="Exportar" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_export_wizard" model="ir.actions.act_window">
        <field name="name">Exportar Inventario</field>
        <field name="res_model">export.inventory.month.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_export_inventory_wizard_form"/>
    </record>
</odoo>