<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.reports</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block name="audit_trail_setting_container" position="after">
                <block title="UAFE" id="uafe_settings_container" name="uafe_settings">
                    <setting string="Reports" company_dependent="1" help="Configurations for the UAFE">
                        <field name="sales_amount_report_uafe"/>
                    </setting>
                </block>
            </block>
        </field>
    </record>
     <record id="view_res_config_settings_auth_staff" model="ir.ui.view">
        <field name="name">res.config.settings.personal.autorizacion.por.empresa</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <block name="audit_trail_setting_container" position="after">
                <block title="Personal de autorización" name="authorization_staff_settings">

                    <!-- Pagos -->
                    <block title="Pagos" name="auth_staff_payments_block">
                        <setting string="Revisado por" company_dependent="1"
                                 help="Usuario responsable de revisar pagos en esta compañía.">
                            <field name="payment_reviewed_by_id" options="{'no_open': True}"/>
                        </setting>
                    </block>

                    <!-- Asiento -->
                    <block title="Asiento" name="auth_staff_moves_block">
                        <setting string="Revisado por" company_dependent="1"
                                 help="Usuario responsable de revisar asientos contables en esta compañía.">
                            <field name="move_reviewed_by_id" options="{'no_open': True}"/>
                        </setting>
                        <setting string="Aprobado por" company_dependent="1"
                                 help="Usuario responsable de aprobar asientos contables en esta compañía.">
                            <field name="move_approved_by_id" options="{'no_open': True}"/>
                        </setting>
                    </block>

                    <!-- Pagos en lote -->
                    <block title="Pagos en lote" name="auth_staff_batch_payments_block">
                        <setting string="Revisado por" company_dependent="1"
                                 help="Usuario responsable de revisar pagos en lote en esta compañía.">
                            <field name="batch_payment_reviewed_by_id" options="{'no_open': True}"/>
                        </setting>
                    </block>

                    <!-- Retenciones -->
                    <block title="Retenciones" name="auth_staff_retentions_block">
                        <setting string="Revisado por" company_dependent="1"
                                 help="Usuario responsable de revisar retenciones en esta compañía.">
                            <field name="retention_reviewed_by_id" options="{'no_open': True}"/>
                        </setting>
                    </block>
                </block>
            </block>

        </field>
    </record>
</odoo>
