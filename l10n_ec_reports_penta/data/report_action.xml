<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Acción PDF del Reporte de Conciliación Bancaria -->
  <record id="report_penta_bank_recon_pdf" model="ir.actions.report">
    <field name="name">Reporte de Conciliación Bancaria</field>
    <field name="model">penta.bank.recon.report.wizard</field>
    <field name="report_type">qweb-pdf</field>
    <!-- IMPORTANTÍSIMO: este 'report_name' debe coincidir con el id de la plantilla QWeb (prefijado por el módulo) -->
    <field name="report_name">l10n_ec_reports_penta.report_penta_bank_recon_pdf_template</field>
    <field name="print_report_name">'reporte_conciliacion_bancaria_%s_%s' % (object.date_from or '', object.date_to or '')</field>
    <field name="paperformat_id" ref="l10n_ec_reports_penta.paperformat_bank_recon_vertical"/>
  </record>
</odoo>
