<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">

    <!-- ================================= -->
    <!-- ESTRUCTURA SALARIAL -->
    <!-- ================================= -->

    <record id="structure_ec_employee" model="hr.payroll.structure">
      <!-- Nombre -->
      <field name="name">Rol de pagos</field>
      <!-- Tipo de estructura -->
      <field name="type_id" ref="l10n_ec_rrhh_penta.structure_type_ec_employees"/>
      <!-- País -->
      <field name="country_id" ref="base.ec"/>
      <!-- Activa -->
      <field name="active">True</field>
      <!-- Periodicidad -->
      <field name="schedule_pay">monthly</field>
      <!-- Usar líneas de días trabajados -->
      <field name="use_worked_day_lines">True</field>
      <!-- Cálculo acumulado anual -->
      <field name="ytd_computation">False</field>
    </record>
  
  </data>
</odoo>