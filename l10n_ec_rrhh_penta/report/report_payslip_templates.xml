<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="report_payslip_inherit_rrhh_penta" inherit_id="hr_payroll.report_payslip">

        <!-- Ocultar Job Position -->
        <xpath expr="//div[@id='employee_job_title']" position="replace"/>

    </template>

    <template id="external_layout_standard_only_logo" inherit_id="web.external_layout_standard">

        <!-- HEADER -->
        <xpath expr="/t/div[1]" position="replace">
            <div class="header o_company_#{company.id}_layout"
                style="
                    position: absolute;
                    top: 14mm;
                    left: 10mm;
                    width: auto;
                    height: auto;
                ">
                <img t-if="company.logo"
                    t-att-src="image_data_uri(company.logo)"
                    alt="Logo"
                    style="max-height:70px;"/>
            </div>
        </xpath>

        <!-- Quitar dirección -->
        <xpath expr="//t[@t-call='web.address_layout']" position="replace"/>

        <!-- Quitar título -->
        <xpath expr="//h2[@t-out='layout_document_title']" position="replace"/>

        <!-- Reducir espacio superior del contenido -->
        <xpath expr="/t/div[2]" position="attributes">
            <attribute name="style">padding-top:24mm;</attribute>
        </xpath>

        <!-- FOOTER -->
        <xpath expr="//div[contains(@t-attf-class, 'footer')]" position="replace">
            <div/>
        </xpath>

    </template>

    <template id="external_layout_only_logo">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-call="l10n_ec_rrhh_penta.external_layout_standard_only_logo"><t t-out="0"/></t>

    </template>

    <template id="report_payslip_template_rrhh_penta">
        <!-- CONTENEDOR HTML (OBLIGATORIO) -->
        <t t-call="web.html_container">
            <t t-set="company" t-value="docs.env.company"/>
            
            <t t-foreach="docs" t-as="slip">
                <t t-call="l10n_ec_rrhh_penta.external_layout_only_logo">

                    <style>
                        /* ===== RESET ABSOLUTO PARA wkhtmltopdf ===== */
                        table.no-table,
                        table.no-table tr,
                        table.no-table td,
                        table.no-table th {
                            border: none !important;
                            outline: none !important;
                            box-shadow: none !important;
                        }

                        table.no-table {
                            width: 100%;
                            border-collapse: collapse !important;
                            border-spacing: 0 !important;
                            font-size: 12px;
                        }

                        table.no-table td,
                        table.no-table th {
                            padding: 4px 6px;
                            vertical-align: middle;
                        }

                        /* ===== UNICA LINEA PERMITIDA ===== */
                        th.bb {
                            border-bottom: 1px solid #000 !important;
                        }
                    </style>

                    <!-- ================= TITULO ================= -->
                    <h2 class="text-center" style="margin-top:0mm; margin-bottom:4mm;">ROL DE PAGOS</h2>

                    <!-- ================= INFO EMPLEADO ================= -->
                    <table class="no-table">
                        <tr>
                            <td><strong>Nombre:</strong></td>
                            <td t-esc="slip.employee_id.name"/>
                            <td><strong>Salario contrato:</strong></td>
                            <td t-esc="slip.contract_id.wage" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                        </tr>
                        <tr>
                            <td><strong>Cédula:</strong></td>
                            <td t-esc="slip.employee_id.identification_id"/>
                            <td><strong>Desde:</strong></td>
                            <td t-esc="slip.date_from"/>
                        </tr>
                        <tr>
                            <td><strong>Departamento:</strong></td>
                            <td t-esc="slip.employee_id.department_id.name"/>
                            <td><strong>Hasta:</strong></td>
                            <td t-esc="slip.date_to"/>
                        </tr>
                        <tr>
                            <td><strong>Cargo:</strong></td>
                            <td t-esc="slip.employee_id.job_id.name"/>
                            <td><strong>Días trabajados:</strong></td>
                            <td>
                                <span t-esc="min(30, sum(slip.worked_days_line_ids.mapped('number_of_days')))"/>
                            </td>
                        </tr>
                    </table>

                    <!-- ================= INGRESOS / EGRESOS ================= -->
                    <div class="row">

                        <!-- INGRESOS -->
                        <div class="col-6">
                            <table class="no-table">
                                <thead>
                                    <tr>
                                        <th class="text-center bb">INGRESOS</th>
                                        <th class="text-center bb">VALOR</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="ingresos"
                                        t-value="slip.line_ids.filtered(lambda l: l.category_id and l.category_id.code in ('BASIC','VACT','HOREXS','BONO','BENFSO','COMSD'))"/>

                                    <t t-foreach="ingresos" t-as="line">
                                        <tr>
                                            <td t-esc="line.name"/>
                                            <td class="text-center">
                                                <span t-esc="line.total" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <!-- TOTAL -->
                                    <tr>
                                        <td><strong>TOTAL DE INGRESOS</strong></td>
                                        <td class="text-center">
                                            <span t-esc="sum(ingresos.mapped('total'))" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- EGRESOS -->
                        <div class="col-6">
                            <table class="no-table">
                                <thead>
                                    <tr>
                                        <th class="text-center bb">EGRESOS</th>
                                        <th class="text-center bb">VALOR</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="egresos"
                                        t-value="slip.line_ids.filtered(lambda l: l.category_id and l.category_id.code in ('DEDUD'))"/>

                                    <t t-foreach="egresos" t-as="line">
                                        <tr>
                                            <td t-esc="line.name"/>
                                            <td class="text-center">
                                                <span t-esc="line.total" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <!-- TOTAL -->
                                    <tr>
                                        <td><strong>TOTAL DE EGRESOS</strong></td>
                                        <td class="text-center">
                                            <span t-esc="sum(egresos.mapped('total'))" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>

                    <!-- ================= SALARIO NETO ================= -->
                    <t t-set="salario_neto"
                        t-value="sum(ingresos.mapped('total')) - sum(egresos.mapped('total'))"/>

                    <br/>

                    <table  style="width:50%;">
                        <tr>
                            <td><strong>SALARIO NETO</strong></td>
                            <td class="text-right">
                                <span t-esc="salario_neto" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                            </td>
                        </tr>
                    </table>

                    <!-- ================= FIRMAS ================= -->
                    <table width="100%" style="font-size:12px;border:none; border-collapse:collapse;">
                        <tr>
                            <td width="45%" class="text-center">
                                <br/><br/>
                                ___________________________<br/>
                                <strong>RECIBÍ CONFORME</strong><br/>
                                <span t-esc="slip.employee_id.name"/>
                            </td>
                            <td width="10%"></td>
                            <td width="45%" class="text-center">
                                <br/><br/>
                                ___________________________<br/>
                                <strong>ELABORADO POR</strong><br/>
                                <span t-esc="user.name"/>
                            </td>
                        </tr>
                    </table>
                    
                </t>
            </t>

        </t>
    </template>

</odoo>
