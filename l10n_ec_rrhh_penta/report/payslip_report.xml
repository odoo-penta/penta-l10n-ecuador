<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_payslip_landscape" model="report.paperformat">
        <field name="name">Rol de Pagos Horizontal</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <!-- ORIENTACIÓN -->
        <field name="orientation">Landscape</field>
        <!-- MÁRGENES (ajustables) -->
        <field name="margin_top">15</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <!-- HEADER -->
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <!-- DPI -->
        <field name="dpi">90</field>
    </record>

    <record id="action_report_payslip_penta" model="ir.actions.report">
        <field name="name">Recibo de nomina</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ec_rrhh_penta.report_payslip_template_rrhh_penta</field>
        <field name="report_file">l10n_ec_rrhh_penta.report_payslip_template_rrhh_penta</field>
        <field name="paperformat_id" ref="l10n_ec_rrhh_penta.paperformat_payslip_landscape"/>
        <field name="print_report_name">'ROL_DE_PAGOS_%s' % (object.employee_id.name)</field>
    </record>

</odoo>
