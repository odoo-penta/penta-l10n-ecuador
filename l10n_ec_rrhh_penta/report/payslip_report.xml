<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_rrhh_compacto" model="report.paperformat">
        <field name="name">RRHH Compacto</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <!-- MÁRGENES (CLAVE) -->
        <field name="margin_top">25</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
    </record>

    <record id="action_report_payslip_penta" model="ir.actions.report">
        <field name="name">Recibo de nomina</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ec_rrhh_penta.report_payslip_template_rrhh_penta</field>
        <field name="report_file">l10n_ec_rrhh_penta.report_payslip_template_rrhh_penta</field>
        <field name="paperformat_id" ref="l10n_ec_rrhh_penta.paperformat_rrhh_compacto"/>
        <field name="print_report_name">'ROL_DE_PAGOS_%s' % (object.employee_id.name)</field>
    </record>

    <record id="report_payroll_xlsx" model="ir.actions.report">
        <field name="name">Reporte Nómina</field>
        <field name="model">popup.wizard</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">l10n_ec_rrhh_penta.report_payroll_xlsx</field>
        <field name="report_file">l10n_ec_rrhh_penta.report_payroll_xlsx</field>
        <field name="attachment_use">False</field>
    </record>

</odoo>
