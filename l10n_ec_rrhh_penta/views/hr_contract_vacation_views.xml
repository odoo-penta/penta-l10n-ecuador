<odoo>
  <!-- PÃ¡gina VACACIONES en hr.contract -->
  <record id="view_hr_contract_vacation_page" model="ir.ui.view">
    <field name="name">hr.contract.vacation.page.penta</field>
    <field name="model">hr.contract</field>
    <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='other']" position="after">
        <page string="Vacaciones" name="penta_vacations">
          <group>
            <group colspan="4">
              <button name="action_confirm_rebuild_vacation_balances" type="object" class="oe_highlight" string="Recalcular periodos" groups="base.group_system"/>
            </group>
            <group name="penta_vac_box" colspan="4" class="penta-vac-box">
              <div class="row g-3">
                <div class="col-md-4">
                  <div class="o_form_label text-uppercase small text-muted">Vacaciones acreditadas</div>
                  <field name="vac_total_entitled" nolabel="1" readonly="1" class="o_stat_value fs-4 fw-bold"/>
                </div>
                <div class="col-md-4">
                  <div class="o_form_label text-uppercase small text-muted">Vacaciones tomadas</div>
                  <field name="vac_total_taken" nolabel="1" readonly="1" class="o_stat_value fs-4 fw-bold"/>
                </div>
                <div class="col-md-4">
                  <div class="o_form_label text-uppercase small text-muted">Vacaciones disponibles</div>
                  <field name="vac_total_available" nolabel="1" readonly="1" class="o_stat_value fs-4 fw-bold"/>
                </div>
              </div>
            </group>
          </group>
          <notebook>
            <page string="Actuales" name="penta_actual_vacations">
              <field name="vacation_balance_ids" nolabel="1">
                <list create="0" edit="0" delete="0">
                  <field name="year_index"/>
                  <field name="period_start"/>
                  <field name="period_end"/>
                  <field name="days_entitled"/>
                  <field name="days_pending"/>
                  <field name="days_taken"/>
                  <field name="days_available"/>
                  <field name="provisional_holidays"/>
                </list>
              </field>
            </page>
            <page string="Anteriores" name="penta_anterior_vacations_admin">
              <field name="vacation_balance_mg_ids" nolabel="1">
                <list editable="bottom">
                  <field name="year_index"/>
                  <field name="period_start"/>
                  <field name="period_end"/>
                  <field name="days_taken"/>
                  <field name="provisional_holidays"/>
                </list>
              </field>
            </page>
          </notebook>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
