<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_hr_contract_rebuild_vacation_wizard_form" model="ir.ui.view">
    <field name="name">hr.contract.rebuild.vacation.wizard.form</field>
    <field name="model">hr.contract.rebuild.vacation.wizard</field>
    <field name="arch" type="xml">
        <form string="Confirmar Recalculo de Vacaciones">
            <group>
                <p style="color:red;">
                    Esta acción eliminará todos los registros actuales de vacaciones 
                    y los volverá a generar desde cero según la fecha de inicio de contrato.
                </p>
                <field name="contract_ids" readonly="1"/>
            </group>
            <footer>
                <button string="Confirmar y Recalcular" type="object" name="action_confirm"
                        class="btn-primary"/>
                <button string="Cancelar" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
  </record>

  <!-- Página: Detalles del contrato (antes de Salary Information / information) -->
  <record id="view_hr_contract_details" model="ir.ui.view">
    <field name="name">view.hr.contract.details</field>
    <field name="model">hr.contract</field>
    <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='information']" position="before">
        <page string="Detalles del contrato" name="contract_details">
          <group>
            <group string="DETALLE">
              <field name="l10n_ec_ptb_years_in_service" readonly="1"/>
              <field name="l10n_ec_ptb_sectoral_code_iess"/>
              <field name="l10n_ec_ptb_code_mrl"/>
              <field name="code_iess"/>
            </group>
            <group string="Documentos / Valores">
              <field name="l10n_ec_ptb_fortnight"/>
              <field name="l10n_ec_ptb_input_iess" filename="x_in_iess_name"/>
              <field name="l10n_ec_ptb_output_iess" filename="x_out_iess_name"/>
            </group>
          </group>
        </page>
      </xpath>
      <xpath expr="//group[@name='notes_group']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='date_end']" position="after">
        <field name="reason_end"/>
        <field name="notes" string="Motivo salida interno"/>
      </xpath>
      <xpath expr="//page[@name='other']" position="after">
        <page string="Contratos anteriores" name="penta_previous_contracts" invisible="not has_previous_contracts">
          <group>
            <field name="previous_contract_ids" widget="many2many_tags" options="{'color_field': 'kanban_state'}"/>
            <field name="previous_contract_ids" nolabel="1" widget="one2many_list">
               <list create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="state"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="company_id"/>
                <field name="structure_type_id"/>
                <field name="active"/>
              </list>
            </field>
          </group>
        </page>
      </xpath>
      <xpath expr="//page[@name='information']" position="after">
        <page string="Otros parámetros" name="other_parameters">
          <group>
            <group string="FONDOS DE RESERVA">
              <field name="l10n_ec_ptb_reserve_fund_periodicity"/>
            </group>
            <group string="DÉCIMOS">
              <field name="l10n_ec_ptb_thirteenth_fund_paid" required="1"/>
              <field name="l10n_ec_ptb_fourteenth_fund_paid" required="1"/>
              <field name="l10n_ec_ptb_fourteenth_regime" required="1"/>
            </group>
          </group>

          <group>
            <group string="IESS">
              <field name="iess_patronal_id" options="{'no_create': False, 'no_open': False}"/>
              <field name="iess_personal_id" options="{'no_create': False, 'no_open': False}"/>
              <field name="iess_conyugal_id" options="{'no_create': False, 'no_open': False}"/>
              <field name="relation_type"/>
              <field name="l10n_ec_ptb_payment_profits" readonly="1"/>
            </group>
            <group string="SECCIÓN CONTABLE">
              <field name="account_section_id" options="{'no_create': False, 'no_open': False}"/>
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>

  <record id="hr_contract_form_view" model="ir.ui.view">
      <field name="name">hr.contract.form.analytic</field>
      <field name="model">hr.contract</field>
      <field name="inherit_id" ref="hr_payroll_account.hr_contract_view_form"/>
      <field name="arch" type="xml">
          <xpath name="analytic_account_id" position="replace">
            <field name="analytic_distribution" widget="analytic_distribution"
                  groups="analytic.group_analytic_accounting" optional="hide"
                  options="{'product_field': 'product_id', 'account_field': 'account_id', 'force_applicability': 'optional'}"/>
          </xpath>
      </field>
  </record>

  <record id="hr_contract_form_inherit_penta" model="ir.ui.view">
    <field name="name">view.hr.contract.inherit.penta</field>
    <field name="model">hr.contract</field>
    <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='contract_details_2']/separator" position="attributes">
        <attribute name="string">Tiempo parcial</attribute>
      </xpath>
    </field>
  </record>

</odoo>
