<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- ACCIÓN -->
  <record id="action_hr_account_section" model="ir.actions.act_window">
    <field name="name">Secciones contables</field>
    <field name="res_model">hr.account.section</field>
    <field name="view_mode">list,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p>Parametriza las secciones contables </p>
    </field>
  </record>

  <!-- MENÚ -->
  <menuitem id="menu_hr_account_section_root"
            name="Parámetros Nómina"
            parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
            sequence="90"/>
  <menuitem id="menu_hr_account_section"
            name="Secciones contables"
            parent="menu_hr_account_section_root"
            action="action_hr_account_section"
            sequence="10"/>



  <record id="view_hr_account_section_list" model="ir.ui.view">
    <field name="name">hr.account.section.list</field>
    <field name="model">hr.account.section</field>
    <field name="arch" type="xml">
      <list create="1" edit="1" delete="1" string="Secciones contables">
        <field name="name"/>
        <field name="code"/>
        <field name="active"/>
        <field name="sequence"/>
      </list>
    </field>
  </record>

  <!-- FORM VIEW -->
  <record id="view_hr_account_section_form" model="ir.ui.view">
    <field name="name">hr.account.section.form</field>
    <field name="model">hr.account.section</field>
    <field name="arch" type="xml">
      <form string="Sección contable">
        <sheet>
          <group>
            <group>
              <field name="name" required="1"/>
              <field name="code"/>
              <field name="sequence"/>
              <field name="active"/>
            </group>
            <group string="Cuentas">
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>
