<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Terminos de pago -->
    <record id="view_order_form_inherit_penta" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.penta</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Financing" name="financing">
                    <group>
                        <field name="interest"/>
                        <field name="months_of_grace"/>
                        <field name="apply_interest_grace"/>
                        <field name="minimum_fee"/>
                    </group>
                    <notebook>
                        <page name="deferred_lines" string="Amortization Table">
                            <field name="line_deferred_ids">
                                <list>
                                    <field name="month"/>
                                    <field name="initial_balance"/>
                                    <field name="interest_amount"/>
                                    <field name="amortization"/>
                                    <field name="installment"/>
                                    <field name="final_balance"/>
                                    <field name="due_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
