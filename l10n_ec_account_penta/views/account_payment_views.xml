<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_account_payment_custom_form" model="ir.ui.view">
        <field name="name">account.payment.custom.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group1']/field[@name='memo']" position="after">
                <field name="payment_reference"/>
            </xpath>
            <!-- <xpath expr="//field[@name='destination_account_id']" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('user_has_group', '!=', 'l10n_ec_account_penta.group_advanced_payment_admin')]}
                </attribute>
            </xpath> -->
            <xpath expr="//field[@name='partner_bank_id']" position="before">
                  <field name="destination_account_id"
                        groups="l10n_ec_account_penta.group_advanced_payment_admin"/>

                    <!-- Readonly para los demÃ¡s -->
                    <field name="destination_account_id"
                        readonly="1"
                        groups="!l10n_ec_account_penta.group_advanced_payment_admin"/>
            </xpath>
            <xpath expr="//group[@name='group2']" position="inside">
                <separator/>

                <!-- reference: banco -->
                <field name="bank_reference"
                       string="Referencia"
                       invisible="journal_type != 'bank'"/>

                <!-- reference: cheque -->
                <field name="bank_reference"
                       string="Entidad emisora"
                       invisible="journal_type != 'check'"/>

                <!-- bank_id: card o check -->
                <field name="bank_id"
                       options="{'no_create': True, 'no_open': True}"
                       invisible="not show_bank_cc"/>

                <!-- resto: solo card -->
                <field name="used_card_id"
                       domain="[('active','=',True), ('company_id','in',[False, company_id])]"
                       options="{'no_create': True, 'no_open': True}"
                       invisible="not show_card"/>

                <field name="card_payment_type" invisible="not show_card"/>
                <field name="number_months" invisible="not show_card"/>
                <field name="number_lot" invisible="not show_card"/>
                <field name="authorization_number" invisible="not show_card"/>
            </xpath>

            <xpath expr="//notebook[@name='payment_notebook']" position="inside">
                <page string="Advanced Options" id="advance_options" invisible="not advanced_payments" groups="l10n_ec_account_penta.group_advanced_payment_admin">
                    <group>
                        <!-- <field name="batch_registration" readonly="state != 'draft'"/>
                        <field name="internal_transfer_cash" readonly="state != 'draft'"/> -->
                        <field name="payment_mode" widget="radio"/>
                    </group>
                    <h3 invisible="payment_mode != 'expense'">Accounting Accounts</h3>
                    <group invisible="payment_mode != 'expense'" name="expense_lines">
                        <field name="expense_line_ids" readonly="state != 'draft'" >
                            <list string="Expense lines" editable="bottom">
                                <field name="currency_id" column_invisible="1"/>
                                <field name="account_id" />
                                <field name="partner_id" />
                                <field name="amount_cash" />
                            </list>
                        </field>
                    </group>
                   
                    <group col="12" invisible="payment_mode != 'expense'">
                        <group colspan="10">
                        </group>
                        <group colspan="2">
                            <field name="difference_expense_amount" string="Restante"/>
                        </group>
                    </group>
                </page>
            </xpath>
            
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="destination_journal" readonly="state != 'draft'" invisible="payment_mode != 'internal'"/>
            </xpath>
           
        </field>
    </record>

    <record id="view_account_payment_expense_line_form" model="ir.ui.view">
        <field name="name">account.payment.expense.line.form</field>
        <field name="model">account.payment.expense.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="payment_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="currency_id" readonly="1"/>
                        </group>

                        <group>
                            <field name="account_id" readonly="1"/>
                            <field name="amount_cash" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>
