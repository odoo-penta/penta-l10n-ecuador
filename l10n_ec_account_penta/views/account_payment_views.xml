<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_account_payment_custom_form" model="ir.ui.view">
      <field name="name">account.payment.custom.form</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_form"/>
      <field name="arch" type="xml">
          <xpath expr="//group[@name='group2']" position='inside'>
              <separator/>
              <field name="journal_type" invisible="1"/>
              <field name="bank_reference" invisible="journal_type not in ('bank', 'cash')"/>
              <field name="used_card_id"  domain="[('active','=',True), ('company_id','in',[False, company_id])]" invisible="journal_type != 'bank'" options="{'no_create': True, 'no_open': True}"/>
              <field name="card_payment_type" invisible="not used_card_id"/>
              <field name="number_months" invisible="journal_type != 'bank'"/>
              <field name="number_lot" invisible="journal_type != 'bank'"/>
              <field name="authorization_number" invisible="journal_type != 'bank'"/>
              <field name="bank_id" invisible="journal_type != 'bank'" options="{'no_create': True, 'no_open': True}"/>
          </xpath>
      </field>
    </record>

</odoo>
