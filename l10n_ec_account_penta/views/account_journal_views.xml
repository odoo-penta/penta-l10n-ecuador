<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_account_journal_form_inherited_penta" model="ir.ui.view">
        <field name="name">account.journal.form.inherited.penta</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form" />
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="payment_info_type" invisible="type not in ('cash', 'bank')"/>
            </field>
            <xpath expr="//page[@name='advanced_settings']/group/group[9]" position="before">
                <group string="Accounting entries control">
                    <field name="entry_control"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
