<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.reports</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block name="audit_trail_setting_container" position="after">
                <block title="Fixed Assets" id="assets_settings_container" name="assets_settings">
                    <setting string="Reports" help="Configurations for the Assets">
                        <field name="asset_template_id"/>
                    </setting>
                </block>
            </block>
            <block id="pay_invoice_online_setting_container" position="inside">
                <setting string="Advanced Payments" company_dependent="1" help="Enables advanced payment management">
                    <field name="advanced_payments"  class="oe_inline"/>
                </setting>
            </block>
        </field>
    </record>

</odoo>
