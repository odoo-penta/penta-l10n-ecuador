<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- CASH BOX SESSION MOVEMENT -->
        <record id="view_cash_box_session_movement_list" model="ir.ui.view">
            <field name="name">cash.box.session.movement.list</field>
            <field name="model">cash.box.session.movement</field>
            <field name="arch" type="xml">
                <list string="Cash Box Session Movement">
                    <field name="currency_id" column_invisible="True"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="operation_type"/>
                    <field name="amount"/>
                    <field name="cashier_id"/>
                    <field name="state" widget="badge"/>
                </list>
            </field>
        </record>

        <record id="view_cash_box_session_movement_form" model="ir.ui.view">
            <field name="name">cash.box.session.movement.form</field>
            <field name="model">cash.box.session.movement</field>
            <field name="arch" type="xml">
                <form string="Cash Box Session Movement">
                    <field name="state" widget="statusbar"/>
                    <sheet>
                        <group>
                            <group>
                                <field name="currency_id" invisible="True"/>
                                <field name="cashier_id"/>
                                <field name="name"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="operation_type"/>
                                <field name="invoice_id" invisible="operation_type not in ('invoice', 'quote')"/>
                                <field name="credit_note_id" invisible="operation_type != 'refund'"/>
                                <field name="payment_id" invisible="operation_type != 'payment'"/>
                                <field name="order_id" invisible="operation_type not in ('invoice', 'quote')"/>
                                <field name="amount"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>