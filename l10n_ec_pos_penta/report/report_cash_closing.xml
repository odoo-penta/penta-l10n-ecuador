<odoo>
    <template id="report_cash_closing_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <style>
                    /* Oculta el logo en todas las páginas */
                    .header .company_logo {
                        display: none !important;
                    }

                    /* Muestra el logo solo en la primera página */
                    @page:first .header .company_logo {
                        display: block !important;
                    }
                </style>
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <!-- Titulo -->
                        <div style="text-align:center; margin-top:100px; margin-bottom:150px;">
                            <h2 style="color:#7c5c47;">COLLECTION AND CLOSING</h2>
                            <h4>
                                <t t-out="o.name or ''"/>
                            </h4>
                        </div>
                        <!-- Cabecera -->
                        <table style="width:100%; margin-bottom:20px;">
                            <tr>
                                <td style="width:50%; vertical-align:top;">
                                    <strong>Cash:</strong> <t t-out="o.cash_id.name or ''"/><br/>
                                    <strong>Status:</strong> <t t-out="o._fields['state'].convert_to_export(o.state, o)"/>
                                </td>
                                <td style="width:50%; vertical-align:top;">
                                    <strong>Opening Date:</strong>
                                    <t t-out="context_timestamp(o.opening_date).strftime('%d/%m/%Y %H:%M:%S') if o.opening_date else ''"/><br/>
                                    <strong>Closing Date:</strong>
                                    <t t-out="context_timestamp(o.closing_date).strftime('%d/%m/%Y %H:%M:%S') if o.closing_date else 'Pending'"/><br/>
                                </td>
                            </tr>
                        </table>
                        <!-- Detalle -->
                        <h4 style="margin-top:20px; margin-bottom:5px;">Detail</h4>
                        <table class="table table-sm" style="width:100%; border-collapse:collapse; border:1px solid #000;">
                            <thead>
                                <tr style="background:#dde6f1; text-align:center;">
                                    <th>Number</th>
                                    <th>Customer</th>
                                    <th>Journal</th>
                                    <th>Payment method</th>
                                    <th>No. document</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="payments">
                                    <!-- Inicializar totales -->
                                    <t t-set="total_general" t-value="0.0"/>
                                    <t t-foreach="payments" t-as="p">
                                        <!-- Sumar totales -->
                                        <t t-set="total_general" t-value="total_general + p.amount"/>
                                        <!-- Datos inicio -->
                                        <tr style="text-align:left;">
                                            <td><t t-esc="p.name or ''"/></td>
                                            <td><t t-esc="p.partner_id.name"/></td>
                                            <td><t t-esc="p.journal_id.name or ''"/></td>
                                            <td><t t-esc="p.payment_method_line_id.name or ''"/></td>
                                            <td><t t-esc="p.memo or ''"/></td>
                                            <td><t t-esc="p.date or ''"/></td>
                                            <td><t t-esc="p.amount"/></td>
                                        </tr>
                                    </t>
                                    <!-- Totalizador -->
                                    <tr style="background:#e0e0e0; font-weight:bold; text-align:center;">
                                        <td colspan="6">Total</td>
                                        <td><t t-out="'%.2f' % total_general"/></td>
                                    </tr>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td colspan="7" style="text-align:center;">No payments found</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <!-- Resumen por diario -->
                        <h4 style="margin-top:20px; margin-bottom:5px;">Journals Summary</h4>
                        <table style="width:100%; border-collapse:collapse; border:1px solid #000;">
                            <thead>
                                <tr style="background:#f0f0f0; text-align:center;">
                                    <th>Journal</th>
                                    <th>Collections</th>
                                    <th>Advances</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Inicializar totales -->
                                <t t-set="total_collections" t-value="0.0"/>
                                <t t-set="total_advances" t-value="0.0"/>
                                <t t-set="grand_total" t-value="0.0"/>
                                <!-- Aquí asumimos que tienes un diccionario con totales por diario -->
                                <t t-foreach="journal_payment_summary.items()" t-as="journal_data">
                                    <tr style="text-align:center;">
                                        <td><t t-esc="journal_data[0]"/></td> <!-- Nombre del diario -->
                                        <td><t t-out="'%.2f' % journal_data[1]['collections']"/><t t-set="total_collections" t-value="total_collections + journal_data[1]['collections']"/></td> <!-- Total del diario -->
                                        <td><t t-out="'%.2f' % journal_data[1]['advances']"/><t t-set="total_advances" t-value="total_advances + journal_data[1]['advances']"/></td> <!-- Total del diario -->
                                        <td><t t-out="'%.2f' % journal_data[1]['total']"/><t t-set="grand_total" t-value="grand_total + journal_data[1]['total']"/></td> <!-- Total del diario -->
                                    </tr>
                                </t>
                                <!-- Totalizador -->
                                <tr style="background:#e0e0e0; font-weight:bold; text-align:center;">
                                    <td>Total</td>
                                    <td><t t-out="'%.2f' % total_collections"/></td>
                                    <td><t t-out="'%.2f' % total_advances"/></td>
                                    <td><t t-out="'%.2f' % grand_total"/></td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Deposito -->
                        <h4 style="margin-top:20px; margin-bottom:5px;">Deposit</h4>
                        <table class="table table-sm" style="width:100%; border-collapse:collapse; border:1px solid #000;">
                            <thead>
                                <tr style="background:#dde6f1; text-align:center;">
                                    <th>Number</th>
                                    <th>Customer</th>
                                    <th>Journal</th>
                                    <th>Payment method</th>
                                    <th>No. document</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="deposit">
                                    <!-- Datos inicio -->
                                    <tr style="text-align:left;">
                                        <td><t t-esc="deposit.name or ''"/></td>
                                        <td><t t-esc="deposit.partner_id.name"/></td>
                                        <td><t t-esc="deposit.journal_id.name or ''"/></td>
                                        <td><t t-esc="deposit.payment_method_line_id.name or ''"/></td>
                                        <td><t t-esc="deposit.memo or ''"/></td>
                                        <td><t t-esc="deposit.date or ''"/></td>
                                        <td><t t-esc="deposit.amount"/></td>
                                    </tr>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td colspan="7" style="text-align:center;">No deposit found</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <h4 style="margin-top:20px; margin-bottom:5px;">Balances</h4>
                        <table style="width:100%; border-collapse:collapse; margin-bottom:20px; border:1px solid #000;">
                            <thead>
                                <tr style="background:#f0f0f0; text-align:center;">
                                    <th style="padding:5px; text-align:left;">Initial Balance</th>
                                    <th style="padding:5px; text-align:left;">Suggested Balance</th>
                                    <th style="padding:5px; text-align:left;">Closing Balance</th>
                                    <th style="padding:5px; text-align:left;">Difference</th>
                                    <th style="padding:5px; text-align:left;">Final Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="text-align:center;">
                                    <td><t t-esc="o.initial_balance"/></td>
                                    <td><t t-esc="o.suggested_balance"/></td>
                                    <td><t t-esc="o.closing_balance"/></td>
                                    <td t-att-style="
                                        'color: red;' if o.diff_balance &lt; 0 else ('color: green;' if o.diff_balance &gt; 0 else 'color: black;')">
                                        <t t-esc="o.diff_balance"/>
                                    </td>
                                    <td><t t-esc="o.final_balance"/></td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Responsables -->
                        <h4 style="margin-top:30px; text-align:center;">Responsibles</h4>
                        <table style="width:100%; margin-top:15px; margin-bottom:50px; text-align:center;">
                            <tr>
                                <td style="width:50%;">
                                    <strong>Responsible (Open):</strong><br/>
                                    <t t-out="o.responsible_open.name or ''"/><br/><br/>
                                    ________________________<br/>
                                    C.I.: __________________
                                </td>
                                <td style="width:50%;">
                                    <strong>Responsible (Close):</strong><br/>
                                    <t t-out="o.responsible_close.name or ''"/><br/><br/>
                                    ________________________<br/>
                                    C.I.: __________________
                                </td>
                            </tr>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
