<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_cash_payment_method_list" model="ir.ui.view">
        <field name="name">cash.payment.method.list</field>
        <field name="model">cash.payment.method</field>
        <field name="arch" type="xml">
            <list string="Payment Method">
                <field name="name" decoration-bf="1"/>
                <field name="journal_id"/>
            </list>
        </field>
    </record>

    <record id="view_cash_payment_method_form" model="ir.ui.view">
        <field name="name">cash.payment.method.form</field>
        <field name="model">cash.payment.method</field>
        <field name="arch" type="xml">
            <form string="Payment Method">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="journal_id"/>
                            <field name="l10n_ec_sri_payment_id"/>
                            <field name="require_tc_data"/>
                            <field name="require_bank_data"/>
                            <field name="require_check_data"/>
                            <field name="card"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cash_payment_method" model="ir.actions.act_window">
        <field name="name">Payment Method</field>
        <field name="res_model">cash.payment.method</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
