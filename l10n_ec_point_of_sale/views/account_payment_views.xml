<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_finance_card_list" model="ir.ui.view">
        <field name="name">finance.card.list</field>
        <field name="model">finance.card</field>
        <field name="arch" type="xml">
            <list string="Finance Card">
                <field name="name" decoration-bf="1"/>
                <field name="card_type"/>
            </list>
        </field>
    </record>

    <record id="view_finance_card_form" model="ir.ui.view">
        <field name="name">finance.card.form</field>
        <field name="model">finance.card</field>
        <field name="arch" type="xml">
            <form string="Finance Card">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="card_type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_finance_card" model="ir.actions.act_window">
        <field name="name">Finance card</field>
        <field name="res_model">finance.card</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_account_payment_cash_manage_form" model="ir.ui.view">
        <field name="name">account.payment.cash.manage.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group2']" position='inside'>
                <separator/>
                <field name="journal_type" invisible="1"/>
                <field name="bank_reference" invisible="journal_type not in ('bank', 'cash')"/>
                <field name="card" invisible="journal_type != 'bank'" options="{'no_create': True, 'no_open': True}"/>
                <field name="card_payment_type" invisible="not card"/>
                <field name="number_months" invisible="journal_type != 'bank'"/>
                <field name="number_lot" invisible="journal_type != 'bank'"/>
                <field name="authorization_number" invisible="journal_type != 'bank'"/>
                <field name="bank_id" invisible="journal_type != 'bank'" options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>

    <record id="view_pos_payment_method_cash_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.method.cash.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="require_tc_data"/>
                <field name="require_bank_data"/>
                <field name="require_check_data"/>
                <field name="card" invisible="not require_tc_data"/>
            </field>
        </field>
    </record>

</odoo>
