<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_customer_payment_list_inherit_point_of_sale" model="ir.ui.view">
        <field name="name">account.customer.payment.list.inherit.point.of.sale</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="cash_session_id" column_invisible="context.get('default_payment_type', True)"/>
            </field>
        </field>
    </record>

    <record id="view_account_payment_form_inherit_point_of_sale" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.point.of.sale</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='memo']" position='after'>
                <field name="code_movement"/>
            </xpath>
        </field>
    </record>

</odoo>
