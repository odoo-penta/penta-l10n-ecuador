<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_sale_stock_form_inherit_sale_stock_l10n_ec_point_of_sale" model="ir.ui.view">
        <field name="name">sale.order.sale.stock.form.inherit.l10n.ec.point.of.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='commitment_date']" position="before">
                <field name="cash_session_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='warehouse_id'][not(@invisible)]" position="attributes">
                <attribute name="readonly">cash_session_id != False</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_inherit_sale_stock_l10n_ec_point_of_sale" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.l10n.ec.point.of.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="code_movement"/>
            </xpath>
        </field>
    </record>

</odoo>
