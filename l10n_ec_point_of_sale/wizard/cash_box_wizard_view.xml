<odoo>
    <!-- COINS WIZARD -->
    <record id="view_cash_box_coin_wizard_form" model="ir.ui.view">
        <field name="name">cash.box.coin.wizard.form</field>
        <field name="model">cash.box.coin.wizard</field>
        <field name="arch" type="xml">
            <form string="Coin Cash Box" version="7.0">
                <group>
                    <group colspan="2">
                        <field name="coin_line_ids" widget="product_label_section_and_note_field_o2m" mode="list,kanban" nolabel="1">
                            <list editable="bottom" create="false">
                                <field name="coin_id" readonly="1"/>
                                <field name="value" readonly="1"/>
                                <field name="quantity"/>
                            </list>
                        </field>
                    </group>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_coins" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cash_box_coin_wizard" model="ir.actions.act_window">
        <field name="name">Count Cash</field>
        <field name="res_model">cash.box.coin.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- OPEN WIZARD -->
    <record id="view_cash_box_open_wizard_form" model="ir.ui.view">
        <field name="name">cash.box.open.wizard.form</field>
        <field name="model">cash.box.open.wizard</field>
        <field name="arch" type="xml">
            <form string="Open Cash Box" version="7.0">
                <group>
                    <group>
                        <field name="cash_id" readonly="1"/>
                        <div class="o_row">
                            <div class="o_col_6">
                                <field name="initial_balance"/>
                            </div>
                            <div class="o_col_6" style="margin-top: 5px;">
                                <button name="action_open_coin_wizard"
                                    string="Count Cash"
                                    type="object"
                                    context="{'default_opened_wizard_id': id}"
                                    class="btn-secondary"
                                    icon="fa-money"/>
                            </div>
                        </div>
                    </group>
                    <group>
                        <field name="currency_id" readonly="1"/>
                    </group>
                    <group colspan="2">
                        <field name="opening_note"/>
                    </group>
                </group>
                <footer>
                    <button string="Open Cash Box" type="object" name="action_confirm_open" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- CLOSE WIZARD -->
    <record id="view_cash_box_closed_wizard_form" model="ir.ui.view">
        <field name="name">cash.box.closed.wizard.form</field>
        <field name="model">cash.box.closed.wizard</field>
        <field name="arch" type="xml">
            <form string="Closed Cash Box" version="7.0">
                <group>
                    <group>
                        <field name="cash_id" readonly="1"/>
                        <field name="suggested_balance"/>
                        <field name="exceeds_limit" invisible="1"/>
                        <div class="o_col_6">
                            <field name="final_balance" decoration-success="final_balance > suggested_balance" decoration-danger="suggested_balance > final_balance"/>
                        </div>
                        <div class="o_col_6" style="margin-top: 5px;">
                            <button name="action_close_coin_wizard"
                                string="Count Cash"
                                type="object"
                                context="{'default_closed_wizard_id': id}"
                                class="btn-secondary"
                                icon="fa-money"/>
                        </div>
                    </group>
                    <group>
                        <field name="currency_id" readonly="1"/>
                    </group>
                    <group colspan="2">
                        <field name="closing_note"/>
                    </group>
                    <div class="alert alert-info o_form_label" invisible="suggested_balance >= final_balance" style="width: 500px">
                        Diferencia en cierre de caja, valor POSITIVO ira a la cuenta de ganancias
                    </div>
                    <div class="alert alert-warning o_form_label" invisible="final_balance >= suggested_balance" style="width: 500px">
                        Diferencia en cierre de caja, valor NEGATIVO se ira a la cuenta de perdidas.
                    </div>
                    <div class="alert alert-danger o_form_label" invisible="not exceeds_limit" style="width: 700px">
                        Diferencia en cierre de caja sobrepasa el limite permitido, se notificara a los administradores de caja.
                    </div>
                </group>
                <footer>
                    <button string="Close Cash Box" type="object" name="action_confirm_closed" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                    <div style="margin-left:auto;">
                        <button name="print_report" string="Print Summary" type="object" class="btn-primary" icon="fa-print"/>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <!-- NEW SALE -->
    <record id="view_cash_box_sale_wizard_form" model="ir.ui.view">
        <field name="name">cash.box.sale.wizard.form</field>
        <field name="model">cash.box.sale.wizard</field>
        <field name="arch" type="xml">
            <form string="New Sale">
                <sheet>
                    <group>
                        <group colspan="2">
                            <field name="cash_id" invisible="True"/>
                            <field name="session_id" invisible="True"/>
                            <field name="partner_id" required="1" context="{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company': True, 'default_customer_rank': 1}"/>
                        </group>
                        <separator string="Products" colspan="2"/>
                        <group colspan="2">
                            <field name="product_line_ids" widget="product_label_section_and_note_field_o2m" mode="list,kanban" nolabel="1">
                                <list editable="bottom">
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="exist_packaging" column_invisible="True"/>
                                    <field name="product_packaging_id" invisible="not exist_packaging" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="qty_available"/>
                                    <field name="quantity" decoration-danger="quantity &gt; qty_available"/>
                                    <field name="price_unit" readonly="1"/>
                                    <field name="tax_ids" readonly="1" widget="many2many_tags"/>
                                    <field name="price_tax" readonly="1" sum="Taxs"/>
                                    <field name="price_total" readonly="1" sum="Total"/>
                                </list>
                            </field>
                        </group>
                        <separator string="Advances" colspan="2" invisible="not has_advance"/>
                        <group colspan="2" invisible="not has_advance">
                            <field name="advance_line_ids" widget="product_label_section_and_note_field_o2m" mode="list" nolabel="1">
                                <list editable="bottom" delete="1">
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="partner_id" column_invisible="True"/>
                                    <field name="account_id" column_invisible="True"/>
                                    <field name="move_line_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="amount" sum="Total" readonly="1" width="100"/>
                                </list>
                            </field>
                        </group>
                        <field name="exceeds_amount" invisible="1"/>
                        <div class="alert alert-info o_form_label" invisible="not exceeds_amount" style="width: 500px">
                            El valor a pagar adicional se registrara como anticipo de cliente
                        </div>
                        <separator string="Payment methods" colspan="2" invisible="use_only_advances"/>
                        <group colspan="2" invisible="use_only_advances">
                            <field name="payment_method_ids" widget="product_label_section_and_note_field_o2m" mode="list" nolabel="1">
                                <list editable="bottom" delete="1">
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="payment_method_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="bank_reference" readonly="payment_method_id.payment_info_type not in ('card', 'check', 'bank')"/>
                                    <field name="card" readonly="payment_method_id.payment_info_type != 'card'" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="card_payment_type" readonly="not card"/>
                                    <field name="number_months" readonly="card_payment_type not in ('deferred_with_interest', 'deferred_without_interest')"/>
                                    <field name="number_lot" readonly="payment_method_id.payment_info_type != 'card'"/>
                                    <field name="authorization_number" readonly="payment_method_id.payment_info_type != 'card'"/>
                                    <field name="bank_id" readonly="payment_method_id.payment_info_type != 'check'" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="amount" sum="Total"/>
                                </list>
                            </field>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Continue" type="object" name="action_confirm" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- NEW CREDIT NOTE -->
    <record id="view_cash_box_credit_note_wizard_form" model="ir.ui.view">
        <field name="name">cash.box.credit.note.wizard.form</field>
        <field name="model">cash.box.credit.note.wizard</field>
        <field name="arch" type="xml">
            <form string="New Credit Note">
                <sheet>
                    <group>
                        <group>
                            <field name="cash_id" invisible="True"/>
                            <field name="session_id" invisible="True"/>
                            <field name="invoice_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                            <field name="reason"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Continue" type="object" name="action_confirm" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- NEW PAYMENT -->
    <record id="view_cash_box_payment_wizard_form" model="ir.ui.view">
        <field name="name">cash.box.payment.wizard.form</field>
        <field name="model">cash.box.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="New Payment">
                <sheet>
                    <group>
                        <group colspan="2">
                            <field name="cash_id" invisible="True"/>
                            <field name="session_id" invisible="True"/>
                            <field name="partner_id" required="1" context="{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company': True, 'default_customer_rank': 1}"/>
                        </group>
                        <group>
                            <field name="payment_type" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <separator string="Payment methods" colspan="2"/>
                        <group colspan="2">
                            <field name="payment_method_ids" widget="product_label_section_and_note_field_o2m" mode="list,kanban" nolabel="1">
                                <list editable="bottom" delete="1">
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="payment_method_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="bank_reference" readonly="payment_method_id.payment_info_type not in ('card', 'check', 'bank')"/>
                                    <field name="card" readonly="payment_method_id.payment_info_type != 'card'" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="card_payment_type" readonly="not card"/>
                                    <field name="number_months" readonly="card_payment_type not in ('deferred_with_interest', 'deferred_without_interest')"/>
                                    <field name="number_lot" readonly="payment_method_id.payment_info_type != 'card'"/>
                                    <field name="authorization_number" readonly="payment_method_id.payment_info_type != 'card'"/>
                                    <field name="bank_id" readonly="payment_method_id.payment_info_type != 'check'" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="amount" sum="Total"/>
                                </list>
                            </field>
                        </group>
                    </group>
                    <footer>
                        <button string="Continue" type="object" name="action_confirm" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                    </footer>
                </sheet>    
            </form>
        </field>
    </record>

    <!-- NEW QUOTATION -->
    <record id="view_cash_box_quotation_wizard_form" model="ir.ui.view">
        <field name="name">cash.box.quotation.wizard.form</field>
        <field name="model">cash.box.quotation.wizard</field>
        <field name="arch" type="xml">
            <form string="New Quotation">
                <sheet>
                    <group>
                        <group colspan="2">
                            <field name="cash_id" invisible="True"/>
                            <field name="session_id" invisible="True"/>
                            <field name="sale_order_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="sale_order_state" invisible="True"/>
                            <field name="validated_order" invisible="True"/>
                            <field name="more_order" invisible="True"/>
                            <field name="picking_done" invisible="True"/>
                        </group>
                        <div class="alert alert-warning o_form_label" invisible="not validated_order" style="width: 520px">
                            Orden de entrega validada en la cotización, no podra modificar los productos.
                        </div>
                        <div class="alert alert-danger o_form_label" invisible="not more_order" style="width: 630px">
                            Más de una orden de entraga en la cotización, procese la misma desde el menú de cotizaciones.
                        </div>
                        <separator string="Products" colspan="2"/>
                        <group colspan="2">
                            <field name="product_line_ids" widget="product_label_section_and_note_field_o2m" mode="list,kanban" nolabel="1" readonly="validated_order or more_order">
                                <list editable="bottom">
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="product_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="qty_available"/>
                                    <field name="quantity" decoration-danger="quantity &gt; qty_available"/>
                                    <field name="price_unit" readonly="1"/>
                                    <field name="tax_ids" readonly="1" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                                    <field name="discount" readonly="1"/>
                                    <field name="price_tax" readonly="1" sum="Taxs"/>
                                    <field name="price_total" readonly="1" sum="Total"/>
                                </list>
                            </field>
                        </group>
                        <separator string="Payment methods" colspan="2"/>
                        <group colspan="2">
                            <field name="payment_method_ids" widget="product_label_section_and_note_field_o2m" mode="list,kanban" nolabel="1">
                                <list editable="bottom" delete="1">
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="payment_method_id" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="bank_reference" readonly="payment_method_id.payment_info_type not in ('card', 'check', 'bank')"/>
                                    <field name="card" readonly="payment_method_id.payment_info_type != 'card'" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="card_payment_type" readonly="not card"/>
                                    <field name="number_months" readonly="card_payment_type not in ('deferred_with_interest', 'deferred_without_interest')"/>
                                    <field name="number_lot" readonly="payment_method_id.payment_info_type != 'card'"/>
                                    <field name="authorization_number" readonly="payment_method_id.payment_info_type != 'card'"/>
                                    <field name="bank_id" readonly="payment_method_id.payment_info_type != 'check'" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="amount" sum="Total"/>
                                </list>
                            </field>
                        </group>
                    </group>
                    <footer>
                        <button string="Continue" type="object" name="action_confirm" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
