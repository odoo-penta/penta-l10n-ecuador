<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Regla para usuarios normales: solo pueden ver cajas donde son responsables o auxiliares -->
    <record id="rule_cash_box_user_see_own" model="ir.rule">
        <field name="name">Cash Box: Only responsible or additional users</field>
        <field name="model_id" ref="model_cash_box"/>
        <field name="domain_force">['|', ('responsible_ids', 'in', user.id), ('cashier_ids', 'in', user.id)]</field>
        <field name="groups" eval="[(4, ref('l10n_ec_point_of_sale.group_cash_box_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Regla para administradores: pueden ver todas las cajas -->
    <record id="rule_cash_box_admin_all" model="ir.rule">
        <field name="name">Cash Box: Admin see all</field>
        <field name="model_id" ref="model_cash_box"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('l10n_ec_point_of_sale.group_cash_box_admin'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
