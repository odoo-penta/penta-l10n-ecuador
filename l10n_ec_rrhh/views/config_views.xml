<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menú de configuración de empleado ya existe: hr.menu_config_employee -->
    <!-- Niveles de Educación -->
    <record id="view_hr_education_level_tree" model="ir.ui.view">
        <field name="name">hr.education.level.tree</field>
        <field name="model">hr.education.level</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hr_education_level_form" model="ir.ui.view">
        <field name="name">hr.education.level.form</field>
        <field name="model">hr.education.level</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_hr_education_level" model="ir.actions.act_window">
        <field name="name">Niveles de Educación</field>
        <field name="res_model">hr.education.level</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hr_education_level"
              name="Niveles de Educación"
              parent="hr.menu_config_employee"
              action="action_hr_education_level"
              sequence="10"/>

    <!-- Tipos de discapacidad -->
    <record id="view_hr_disability_type_tree" model="ir.ui.view">
        <field name="name">hr.disability.type.tree</field>
        <field name="model">hr.disability.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="is_subrogated"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hr_disability_type_form" model="ir.ui.view">
        <field name="name">hr.disability.type.form</field>
        <field name="model">hr.disability.type</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="is_subrogated"/>
                    <field name="notes"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_hr_disability_type" model="ir.actions.act_window">
        <field name="name">Tipos de discapacidad</field>
        <field name="res_model">hr.disability.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hr_disability_type"
              name="Tipos de discapacidad"
              parent="hr.menu_config_employee"
              action="action_hr_disability_type"
              sequence="20"/>

    <!-- Modo de pago -->
    <record id="view_hr_payment_mode_tree" model="ir.ui.view">
        <field name="name">hr.payment.mode.tree</field>
        <field name="model">hr.payment.mode</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence"/>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hr_payment_mode_form" model="ir.ui.view">
        <field name="name">hr.payment.mode.form</field>
        <field name="model">hr.payment.mode</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_hr_payment_mode" model="ir.actions.act_window">
        <field name="name">Modos de pago</field>
        <field name="res_model">hr.payment.mode</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hr_payment_mode"
            name="Modos de pago"
            parent="hr.menu_config_employee"
            action="action_hr_payment_mode"
            sequence="30"/>
</odoo>
