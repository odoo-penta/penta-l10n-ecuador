<odoo>
  <record id="view_penta_benefit_config_tree" model="ir.ui.view">
    <field name="name">penta.benefit.config.tree</field>
    <field name="model">penta.benefit.config</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="benefit_key"/>
        <field name="start_day"/>
        <field name="start_month"/>
        <field name="end_day"/>
        <field name="end_month"/>
        <field name="crosses_year"/>
        <field name="company_id" groups="base.group_multi_company"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_penta_benefit_config_form" model="ir.ui.view">
    <field name="name">penta.benefit.config.form</field>
    <field name="model">penta.benefit.config</field>
    <field name="arch" type="xml">
      <form string="Configuración de períodos de beneficios">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="benefit_key"/>
              <field name="active"/>
            </group>
            <group string="Rango">
              <group>
                <field name="start_day"/>
                <field name="start_month"/>
              </group>
              <group>
                <field name="end_day"/>
                <field name="end_month"/>
              </group>
              <field name="crosses_year"/>
            </group>
          </group>
          <group>
            <field name="company_id" groups="base.group_multi_company"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_penta_benefit_config" model="ir.actions.act_window">
    <field name="name">Períodos de Beneficios</field>
    <field name="res_model">penta.benefit.config</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Menú en Configuración de Nómina -->
  <menuitem id="menu_penta_benefit_config"
            name="Períodos de Beneficios"
            parent="hr_payroll.menu_hr_salary_configuration"
            action="action_penta_benefit_config"
            sequence="95"/>
</odoo>
