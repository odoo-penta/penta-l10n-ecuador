<!-- l10n_ec_rrhh/views/hr_leave_views.xml -->
<odoo>
  <record id="view_hr_leave_form_inherit_vac_kpis" model="ir.ui.view">
    <field name="name">hr.leave.form.vac.kpis.penta</field>
    <field name="model">hr.leave</field>
    <!-- Ajusta este ref si tu vista base de formulario de hr.leave es otra -->
    <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
    <field name="arch" type="xml">

      <!-- Inserta dentro del <sheet>, al final -->
      <xpath expr="//sheet" position="inside">
        <group string="Vacaciones" name="penta_vac_box" colspan="4" class="penta-vac-box" invisible="not is_vacation_selected">
          <div class="row g-3">
            <div class="col-md-4">
              <div class="o_form_label text-uppercase small text-muted">Vacaciones disponibles</div>
              <field name="vacation_available" nolabel="1" readonly="1" class="o_stat_value fs-4 fw-bold"/>
            </div>
            <div class="col-md-4">
              <div class="o_form_label text-uppercase small text-muted">Vacaciones tomadas</div>
              <field name="vacation_taken" nolabel="1" readonly="1" class="o_stat_value fs-4 fw-bold"/>
            </div>
            <div class="col-md-4">
              <div class="o_form_label text-uppercase small text-muted">Vacaciones restantes</div>
              <field name="vacation_remaining" nolabel="1" readonly="1" class="o_stat_value fs-4 fw-bold"/>
            </div>
          </div>
        </group>
      </xpath>

    </field>
  </record>
</odoo>
