<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- TREE personalizado: añadimos branch_code sin depender de XMLIDs nativos -->
  <record id="view_hr_work_location_tree_penta" model="ir.ui.view">
    <field name="name">hr.work.location.tree.penta</field>
    <field name="model">hr.work.location</field>
    <field name="arch" type="xml">
      <list string="Work Locations">
        <field name="name"/>
        <field name="branch_code"/>
        <field name="company_id" optional="show"/>
        <field name="active" optional="show"/>
      </list>
    </field>
  </record>

  <!-- FORM personalizado: campo branch_code visible sin heredar XMLID desconocido -->
  <record id="view_hr_work_location_form_penta" model="ir.ui.view">
    <field name="name">hr.work.location.form.penta</field>
    <field name="model">hr.work.location</field>
    <field name="arch" type="xml">
      <form string="Work Location">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="company_id" optional="show"/>
              <field name="active" optional="show"/>
            </group>
            <group>
              <field name="branch_code"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Inyectar nuestras vistas en la acción para que se usen con prioridad -->
  <!-- NOTA: el XMLID de la acción puede variar. Los más comunes:
       - hr.hr_work_location_action
       - hr.action_hr_work_location
       Si tu base usa otro, reemplázalo aquí. -->
  <record id="act_view_hr_work_location_tree_penta" model="ir.actions.act_window.view">
    <field name="sequence">1</field>
    <field name="view_mode">list</field>
    <field name="view_id" ref="view_hr_work_location_tree_penta"/>
    <field name="act_window_id" ref="hr.hr_work_location_action"/>
  </record>

  <record id="act_view_hr_work_location_form_penta" model="ir.actions.act_window.view">
    <field name="sequence">1</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_hr_work_location_form_penta"/>
    <field name="act_window_id" ref="hr.hr_work_location_action"/>
  </record>

</odoo>
