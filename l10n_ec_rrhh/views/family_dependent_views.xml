<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_l10_ec_ptb_family_dependents_tree" model="ir.ui.view">
        <field name="name">l10.ec.ptb.family.dependents.tree</field>
        <field name="model">l10n_ec.ptb.family.dependents</field>
        <field name="arch" type="xml">
            <list string="Cargas familiares">
                <field name="employee_id" invisible="1"/>
                <field name="vat"/>
                <field name="name"/>
                <field name="birthdate"/>
                <field name="gender"/>
                <field name="disability"/>
                <field name="relationship"/>
                <field name="use_for_income_tax"/>
                <field name="is_child"/>
                <field name="is_permanent_charge"/>
                <field name="age_years"/>
            </list>
        </field>
    </record>

    <record id="view_l10_ec_ptb_family_dependents_form" model="ir.ui.view">
        <field name="name">l10.ec.ptb.family.dependents.form</field>
        <field name="model">l10n_ec.ptb.family.dependents</field>
        <field name="arch" type="xml">
            <form string="Carga familiar">
                <group>
                    <group>
                        <field name="employee_id" required="1" options="{'no_create': True}" readonly="1"/>
                        <field name="vat"/>
                        <field name="name"/>
                        <field name="birthdate"/>
                        <field name="gender"/>
                    </group>
                    <group>
                        <field name="relationship" required="1"/>
                        <field name="disability"/>
                        <field name="use_for_income_tax"/>
                        <field name="is_child"/>
                        <field name="is_permanent_charge"/>
                        <field name="phone"/>
                        <field name="address"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_l10_ec_ptb_family_dependents" model="ir.actions.act_window">
        <field name="name">Cargas familiares</field>
        <field name="res_model">l10n_ec.ptb.family.dependents</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('employee_id','=',context.get('default_employee_id'))]</field>
        <field name="context">{'default_employee_id': context.get('default_employee_id')}</field>
        <field name="target">current</field>
    </record>
</odoo>
