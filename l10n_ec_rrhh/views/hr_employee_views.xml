<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ocultar certificate nativo y mostrar nuestro M2O de educación -->
    <record id="view_employee_form_inherit_penta_cb_rrhh_education" model="ir.ui.view">
        <field name="name">hr.employee.form.penta.education</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Reemplazar certificate por education_level_id -->
            <xpath expr="//field[@name='certificate']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='certificate']" position="after">
                <field name="education_level_id" options="{'no_open': False, 'no_create': False}"/>
            </xpath>
        </field>
    </record>

    <!-- Insertar grupo Discapacidad DESPUÉS del grupo Emergency -->
    <record id="view_employee_form_inherit_penta_cb_rrhh_disability" model="ir.ui.view">
        <field name="name">hr.employee.form.penta.disability</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='emergency']" position="after">
                <!-- Parent con 8 columnas para granularidad (pares de 2 col) -->
                <group string="Discapacidad" name="penta_disability" col="8">
                    <!-- Columna izquierda (50%) -->
                    <group col="2" colspan="4">
                    <field name="disability_type_id" options="{'no_open': False, 'no_create': False}"/>
                    </group>

                    <!-- Columna derecha (50%) -->
                    <group string="Datos de subrogación" col="2" colspan="4" invisible="not has_subrogation">
                    <field name="subrogated_name"/>
                    <field name="subrogated_certificate"/>
                    <field name="subrogated_identification_type"/>
                    <field name="subrogated_identification"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='bank_account_id']" position="after">
                    <field name="payment_mode_id" options="{'no_create': False, 'no_open': False}"/>
                    
            </xpath>
        </field>
    </record>

    <!-- Estado civil: ya lo redefinimos por Python; no hace falta tocar vista salvo etiqueta -->
    <!-- Cargas familiares: botón y contador junto a children -->
    <record id="view_employee_form_inherit_penta_cb_rrhh_family" model="ir.ui.view">
        <field name="name">hr.employee.form.penta.family</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='children']" position="after">
                <label for="num_family_dependent_tax"/>
                <field name="num_family_dependent_tax" readonly="1" invisible="children == 0"/>
                <button name="%(action_l10_ec_ptb_family_dependents)d"
                        string="Cargas familiares"
                        type="action"
                        class="oe_highlight"
                        context="{'default_employee_id': id}"/>
            </xpath>
        </field>
    </record>
</odoo>
