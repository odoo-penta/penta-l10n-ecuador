<odoo>
    <record id="view_penta_bank_days_tree" model="ir.ui.view">
        <field name="name">penta.bank.days.tree</field>
        <field name="model">penta.bank.days</field>
        <field name="arch" type="xml">
            <list>
                <field name="pos_payment_method_id"/>
                <field name="journal_id"/>

                <field name="payment_type"/>
                <field name="number_of_months"/>
                <field name="number_of_days"/>
            </list>
        </field>
    </record>

    <record id="view_penta_bank_days_form" model="ir.ui.view">
        <field name="name">penta.bank.days.form</field>
        <field name="model">penta.bank.days</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="pos_payment_method_id"/>
                        <field name="journal_id"/>

                        <field name="payment_type"/>
                        <field name="number_of_months"/>
                        <field name="number_of_days"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_penta_bank_days" model="ir.actions.act_window">
        <field name="name">Días Bancarios</field>
        <field name="res_model">penta.bank.days</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea configuraciones de días bancarios.
            </p>
        </field>
    </record>
</odoo>
