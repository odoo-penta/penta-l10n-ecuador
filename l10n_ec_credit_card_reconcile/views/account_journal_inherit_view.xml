<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista heredada de account.journal -->
    <record id="view_account_journal_form_inherit_account_withhold" model="ir.ui.view">
        <field name="name">account.journal.form.inherit.account.withhold</field>
        <field name="model">account.journal</field>
        <!-- Referencia a la vista original de Odoo -->
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='bank_account']/group/group" position="inside">
                <field name="account_commission"/>
            </xpath>
            <xpath expr="//page[@name='advanced_settings']/group" position="inside">
                <group string="Contacto de Referencia">
                    <field name="reference_contact_id" options="{'no_create_edit': True}" placeholder="Selecciona un contacto"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
