<odoo>
<record id="view_account_payment_form_inherit_credit_card" model="ir.ui.view">
    <field name="name">account.payment.form.inherit.credit_card</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
        <xpath expr="//group[@name='group2']" position="after">
            <group>
                <field name="card_id"/>
            </group>
        </xpath>
    </field>
</record>
</odoo>