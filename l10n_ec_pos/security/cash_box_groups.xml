<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cash_box_access" model="ir.module.category">
        <field name="name">POS PENTA</field>
        <field name="sequence">10</field>
        <field name="description">Cash management and cash sessions</field>
    </record>

    <!-- Grupo para usuarios de caja -->
    <record id="group_cash_box_user" model="res.groups">
        <field name="name">Cash Box User</field>
        <field name="category_id" ref="cash_box_access"/>
        <field name="comment">Users who can see only their boxes or where they are auxiliary</field>
    </record>

    <!-- Grupo para administradores de caja -->
    <record id="group_cash_box_admin" model="res.groups">
        <field name="name">Cash Box Admin</field>
        <field name="category_id" ref="cash_box_access"/>
        <field name="comment">Users who can see all boxes</field>
    </record>

    <!-- Asignar Administrador de Caja al usuario Administrador -->
    <record id="base.user_admin" model="res.users">
        <field name="groups_id" eval="[(4, ref('l10n_ec_pos.group_cash_box_admin'))]"/>
    </record>
</odoo>
