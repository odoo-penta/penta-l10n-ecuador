<odoo>
    <template id="report_cash_closing_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <!-- Encabezado -->
                        <div style="text-align:center; margin-bottom:20px;">
                            <h2 style="color:#7c5c47;">Sales Summary</h2>
                        </div>
                        <!-- Datos principales -->
                        <table style="width:100%; margin-bottom:20px;">
                            <tr>
                                <td style="width:50%; vertical-align:top;">
                                    <strong>Cash:</strong> <t t-out="o.cash_id.name or ''"/><br/>
                                    <strong>Session:</strong> <t t-out="o.name or ''"/><br/>
                                    <strong>Status:</strong> <t t-out="dict(o._fields['state'].selection).get(o.state)"/>
                                </td>
                                <td style="width:50%; vertical-align:top;">
                                    <strong>Opening Date:</strong>
                                    <t t-out="o.opening_date.strftime('%d/%m/%Y %H:%M:%S') if o.opening_date else ''"/><br/>
                                    <strong>Closing Date:</strong>
                                    <t t-out="o.closing_date.strftime('%d/%m/%Y %H:%M:%S') if o.closing_date else 'Pending'"/><br/>
                                </td>
                            </tr>
                        </table>
                        <!-- Saldos -->
                        <h4 style="margin-top:20px; margin-bottom:5px;">Balances</h4>
                        <table style="width:100%; border-collapse:collapse; margin-bottom:20px; border:1px solid #000;">
                            <thead>
                                <tr style="background:#f0f0f0; text-align:center;">
                                    <th style="padding:5px; text-align:left;">Initial Balance</th>
                                    <th style="padding:5px; text-align:left;">Suggested Balance</th>
                                    <th style="padding:5px; text-align:left;">Closing Balance</th>
                                    <th style="padding:5px; text-align:left;">Difference</th>
                                    <th style="padding:5px; text-align:left;">Final Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="text-align:center;">
                                    <td><t t-esc="o.initial_balance"/></td>
                                    <td><t t-esc="o.suggested_balance"/></td>
                                    <td><t t-esc="o.closing_balance"/></td>
                                    <td t-att-style="
                                        'color: red;' if o.diff_balance &lt; 0 else ('color: green;' if o.diff_balance &gt; 0 else 'color: black;')">
                                        <t t-esc="o.diff_balance"/>
                                    </td>
                                    <td><t t-esc="o.final_balance"/></td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Movimientos -->
                        <h4 style="margin-top:20px; margin-bottom:5px;">Cash Movements</h4>
                        <table class="table table-sm" style="width:100%; border-collapse:collapse; border:1px solid #000;">
                            <thead>
                                <tr style="background:#dde6f1; text-align:center;">
                                    <th>Type</th>
                                    <th>Reference</th>
                                    <th>Number</th>
                                    <th>Customer</th>
                                    <th>Cashier</th>
                                    <th>Cash</th>
                                    <th>Transfer/Deposit</th>
                                    <th>Card</th>
                                    <th>Credit</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.movement_ids" t-as="m">
                                    <tr style="text-align:left;">
                                        <td><t t-esc="m.operation_type"/></td>
                                        <td><t t-esc="m.name"/></td>
                                        <td>
                                            <t t-if="m.operation_type == 'order'">
                                                <t t-esc="m.order_id.name or ''"/>
                                            </t>
                                            <t t-elif="m.operation_type == 'payment'">
                                                <t t-esc="m.payment_id.name or ''"/>
                                            </t>
                                            <t t-else="">
                                                <t t-esc="''"/>
                                            </t>
                                        </td>
                                        <td><t t-esc="m.partner_id.name"/></td>
                                        <td><t t-esc="m.cashier_id.name"/></td>
                                        <!-- PAGOS -->
                                        <td class="text-center">
                                            <t t-set="pay" t-value="payment_summary.get(m.id, {})"/>
                                            <t t-out="'%.2f' % pay.get('cash', 0.00)"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="'%.2f' % pay.get('transfer', 0.00)"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="'%.2f' % pay.get('card', 0.00)"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-out="'%.2f' % pay.get('credit', 0.00)"/>
                                        </td>
                                        <td><t t-esc="m.amount"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <!-- Resumen por diario -->
                        <h4 style="margin-top:20px; margin-bottom:5px;">Journals Summary</h4>
                        <table style="width:100%; border-collapse:collapse; border:1px solid #000;">
                            <thead>
                                <tr style="background:#f0f0f0; text-align:center;">
                                    <th>Journal</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- AquÃ­ asumimos que tienes un diccionario con totales por diario -->
                                <t t-foreach="journal_payment_summary.items()" t-as="journal_data">
                                    <tr style="text-align:center;">
                                        <td><t t-esc="journal_data[0]"/></td> <!-- Nombre del diario -->
                                        <td><t t-out="'%.2f' % journal_data[1]"/></td> <!-- Total del diario -->
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr style="background:#e0e0e0; font-weight:bold; text-align:center;">
                                    <td>Total</td>
                                    <td><t t-out="'%.2f' % sum(journal_payment_summary.values())"/></td>
                                </tr>
                            </tfoot>
                        </table>
                        <!-- Responsables -->
                        <h4 style="margin-top:30px; text-align:center;">Responsibles</h4>
                        <table style="width:100%; margin-top:15px; text-align:center;">
                            <tr>
                                <td style="width:50%;">
                                    <strong>Responsible (Open):</strong><br/>
                                    <t t-out="o.responsible_open.name or ''"/><br/><br/>
                                    ________________________<br/>
                                    C.I.: __________________
                                </td>
                                <td style="width:50%;">
                                    <strong>Responsible (Close):</strong><br/>
                                    <t t-out="o.responsible_close.name or ''"/><br/><br/>
                                    ________________________<br/>
                                    C.I.: __________________
                                </td>
                            </tr>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
