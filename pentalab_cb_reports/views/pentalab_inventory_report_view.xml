<odoo>
    <record id="view_inventory_by_location_list" model="ir.ui.view">
        <field name="name">stock.quant.aggregated.list.inventory.by.location</field>
        <field name="model">stock.quant.aggregated</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Inventario por almacén">
                <header>
                    <button name="%(pentalab_report.action_open_export_wizard)d"
                            string="Exportar XLSX"
                            type="action"
                            class="btn-primary"/>
                </header>
                <field name="warehouse_id" string="Almacén"/>
                <field name="location_parent_id" string="Nombre corto"/>
                <field name="default_code" string="Referencia interna"/>
                <field name="product_name" string="Producto"/>
                <field name="product_line" string="Línea"/>
                <field name="product_group" string="Grupo"/>
                <field name="product_category" string="Artículo"/>
                <field name="quantity" string="Cantidad a la mano"/>
                <field name="standard_price" string="Costo"/>
                <field name="list_price" string="Precio"/>
            </list>
        </field>
    </record>
    <record id="view_stock_quant_aggregated_search" model="ir.ui.view">
        <field name="name">stock.quant.aggregated.search</field>
        <field name="model">stock.quant.aggregated</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Internas" name="internal_only" domain="[('location_usage','=','internal')]" help="Solo ubicaciones internas" />
            </search>
        </field>
    </record>

    <record id="action_stock_quant_aggregated" model="ir.actions.act_window">
        <field name="name">Inventario por almacén agrupado</field>
        <field name="res_model">stock.quant.aggregated</field>
        <field name="view_mode">list</field>
        <field name="search_view_id" ref="view_stock_quant_aggregated_search"/>
        <field name="context">{'search_default_internal_only': 1}</field>
    </record>
</odoo>
