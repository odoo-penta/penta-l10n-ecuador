<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action abc_classification_config -->
    <record id="action_abc_classification_config" model="ir.actions.act_window">
        <field name="name">ABC Classification Config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">abc.classification.config</field>
        <field name="path">abc-classification-config</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('company_id', '=', (context.get('allowed_company_ids') or [False])[0])]</field>
    </record>

     <menuitem id="menu_abc_classification_config" name="ABC Config" action="action_abc_classification_config"
        parent="stock.menu_stock_config_settings" />

</odoo>
