<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Lista de Batches (meses) -->
  <record id="view_product_abc_history_batch_tree" model="ir.ui.view">
    <field name="name">product.abc.history.batch.tree</field>
    <field name="model">product.abc.history.batch</field>
    <field name="arch" type="xml">
      <list string="Historial ABC por mes">
        <field name="name" string="Período"/>
        <field name="company_id" string="Empresa"/>
        <field name="year" string="Año"/>
        <field name="month" string="Mes"/>
        <field name="snapshot_date" string="Fecha de corte"/>
        <field name="line_count" string="N.º de productos"/>
      </list>
    </field>
  </record>

  <!-- Form de Batch con botón para abrir líneas -->
  <record id="view_product_abc_history_batch_form" model="ir.ui.view">
    <field name="name">product.abc.history.batch.form</field>
    <field name="model">product.abc.history.batch</field>
    <field name="arch" type="xml">
      <form string="Historial ABC (mes)">
        <header>
          <button name="action_open_lines" type="object" string="Ver productos" class="btn-primary"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" string="Período" readonly="1"/>
              <field name="company_id" string="Empresa" readonly="1"/>
              <field name="snapshot_date" string="Fecha de corte" readonly="1"/>
            </group>
            <group>
              <field name="year" string="Año" readonly="1"/>
              <field name="month" string="Mes" readonly="1"/>
              <field name="line_count" string="N.º de productos" readonly="1"/>
            </group>
          </group>
          <notebook>
            <page string="Productos (snapshot)">
              <field name="line_ids">
                <list string="Productos del historial">
                  <field name="product_id" string="Producto"/>
                  <field name="default_code" string="Referencia interna"/>
                  <field name="annual_sales_qty" string="Cantidad vendida anual"/>
                  <field name="abc_classification" string="Clasificación ABC"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
  <record id="view_product_abc_history_line_search" model="ir.ui.view">
    <field name="name">product.abc.history.line.search</field>
    <field name="model">product.abc.history.line</field>
    <field name="arch" type="xml">
        <search string="Buscar productos (historial ABC)">
            <field name="product_id" string="Producto"/>
            <field name="default_code" string="Referencia interna"/>

            <field name="abc_classification" string="Clasificación ABC"/>
            <field name="annual_sales_qty" string="Cantidad vendida anual"/>

            <filter name="product_id" string="Producto"/>
            <filter name="default_code" string="Referencia interna"/>

            <filter name="abc_classification" string="Clasificación ABC"/>
            <filter name="annual_sales_qty" string="Cantidad vendida anual"/>

            <group expand="1" string="Agrupar por">
                <filter name="group_abc"
                        string="Clasificación ABC"
                        context="{'group_by': 'abc_classification'}"/>
            </group>
        </search>
    </field>
</record>

  <!-- Lista de Líneas independiente -->
  <record id="view_product_abc_history_line_tree" model="ir.ui.view">
    <field name="name">product.abc.history.line.tree</field>
    <field name="model">product.abc.history.line</field>
    <field name="arch" type="xml">
      <list string="Productos — Historial ABC">
        <field name="batch_id" string="Período"/>
        <field name="product_id" string="Producto"/>
        <field name="default_code" string="Referencia interna"/>
        <field name="annual_sales_qty" string="Cantidad vendida anual"/>
        <field name="abc_classification" string="Clasificación ABC"/>
      </list>
    </field>
  </record>

  <!-- Acción y menú -->
  <record id="action_product_abc_history_batches" model="ir.actions.act_window">
    <field name="name">Historial ABC por mes</field>
    <field name="res_model">product.abc.history.batch</field>
    <field name="view_mode">list,form</field>
    <field name="target">current</field>
  </record>

  <menuitem id="menu_product_abc_history_batches"
            name="Historial ABC por mes"
            parent="stock.menu_warehouse_report"
            action="action_product_abc_history_batches"
            sequence="10000"/>
</odoo>
