<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View product_sold View List -->
    <record id="view_product_sold_list" model="ir.ui.view">
        <field name="name">view.product_sold.list</field>
        <field name="model">product.sold</field>
        <field name="arch" type="xml">
            <list>
                <field name="default_code"/>
                <field name="name"/>
                <field name="product_id" widget="many2one"/>
                <field name="line"/>
                <field name="qty_sold_monthly"/>
                <field name="year"/>
                <field name="month"/>
                <field name="date"/>
                <field name="abc_classification"/>
            </list>
        </field>
    </record>

