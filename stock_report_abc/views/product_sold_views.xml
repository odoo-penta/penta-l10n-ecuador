    <!-- View product_sold search -->
    <record id="view_product_sold_search" model="ir.ui.view">
        <field name="name">view.product_sold.search</field>
        <field name="model">product.sold</field>
        <field name="arch" type="xml">
            <search>
                <!-- Entrada de búsqueda por texto -->
                <field name="default_code" string="Referencia Interna"/>
                <field name="line" string="Línea"/>
                <field name="name" string="Producto"/>
                <field name="year" string="Año"/>
                <field name="month" string="Mes"/>

                <group expand="1" string="Agrupar por">
                    <filter string="Referencia Interna" name="default_code" domain="[]" context="{'group_by':'default_code'}"/>
                    <filter string="Línea" name="line" domain="[]" context="{'group_by':'line'}"/>
                    <filter string="Año" name="year" domain="[]" context="{'group_by':'year'}"/>
                    <filter string="Mes" name="month" domain="[]" context="{'group_by':'month'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Action product_sold -->
    <record id="action_product_sold" model="ir.actions.act_window">
        <field name="name">Producto Vendido</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.sold</field>
        <field name="path">product-old</field>
        <field name="view_mode">list,pivot</field>
    </record>

     <menuitem id="menu_product_sold" name="Productos Vendidos" action="action_product_sold"
        parent="stock.menu_warehouse_report" sequence="9999"/>

</odoo>
